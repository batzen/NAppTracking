@if (this.Request.IsAuthenticated)
{
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Exception reports <b class="caret"></b></a>
        <ul class="dropdown-menu">
            <li><a href="@Url.Action("Index", "ExceptionReport")">All</a></li>
            <li class="divider"></li>
            @foreach (var application in this.User.AsApplicationUser().Applications)
            {
                <li><a href="@Url.Action("Index", "ExceptionReport", new { applicationId = application.Id })">@application.Name</a></li>        
            }
        </ul>
    </li>
}
else
{
    <li>@Html.ActionLink("Exception reports", "Index", "ExceptionReport")</li>
}