@using NAppTracking.Server.Extensions
@model IEnumerable<NAppTracking.Server.Entities.ExceptionReport>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CreatedUtc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ExceptionType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ExceptionMessage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MachineName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <span title="@(string.Format("{0:u}", item.CreatedUtc))">@item.CreatedUtc.ToRelativeTime()</span>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ExceptionType)
        </td>
        <td style="width: 100%">
            @Html.ActionLink(item.ExceptionMessage, "Details", new { exceptionReportId = item.Id })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MachineName)
        </td>
        <td>            
            @Html.ActionLink("Delete", "Delete", new { exceptionReportId = item.Id }, new { @class = "btn btn-default btn-xs", role = "button" })
        </td>
    </tr>
}

</table>