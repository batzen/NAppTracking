    <li><a href="@Url.Action("Details", new { Model.Id })">@Model.Message</a></li>
    <li class="active">@ViewBag.Title</li>
</ul>

<h2>@ViewBag.Title</h2>
<hr />

<h3>Are you sure you want to delete this?</h3>
